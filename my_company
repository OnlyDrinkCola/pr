    <script>
        let clickCount = 0;

        function check() {
            let text = "가입 정보:\n";
            text += "아이디 : " + document.corperation.id.value + "\n";
            text += "비밀번호 : " + document.getElementsByName("pw")[0].value + "\n";
            text += "이름 : " + document.getElementById("name").value + "\n";
            text += "주소 : " + document.getElementsByClassName("address")[0].value + "\n";
            alert(text);
        }

        function changeBackground() {
            const colors = ["#ffe0b2", "#c8e6c9", "#b3e5fc", "#f8bbd0", "#d1c4e9"];
            document.body.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        }

        function livePreview(input) {
            document.getElementById("preview").innerText = "입력 중: " + input.value;
        }

        function countClick(event) {
            event.preventDefault();
            clickCount++;
            document.getElementById("clicker").innerText = "클릭 횟수: " + clickCount;
        }
    </script>
</head>
<body>
    <h1>회사 인사 기록 카드</h1>
    <div class="form-container">
        <form name="corperation" action="">
            <div class="form-group">
                <label for="id">아이디</label>
                <input type="text" name="id" value="20151803">
            </div>
            <div class="form-group">
                <label for="pw">비밀번호</label>
                <input type="password" name="pw" value="집가고 싶다">
            </div>
            <div class="form-group">
                <label for="name">이름</label>
                <input type="text" id="name" name="name" value="임준수" onkeyup="livePreview(this)">
            </div>
            <div class="form-group">
                <label for="address">주소</label>
                <input type="text" class="address" name="address" value="충남 보령시">
            </div>
            <div class="form-group">
                <button class="btn" onclick="check()" type="button">가입 정보 확인</button>
                <button class="btn" ondblclick="location.href='my_pr.html'" type="button">초기화면으로</button>
                <button class="btn" onmouseover="changeBackground()" type="button">배경색 변경</button>
                <button class="btn" onclick="countClick(event)" type="button">총 클릭수</button>
            </div>
        </form>
        <div id="preview"></div>
        <div id="clicker">클릭 횟수: 0</div>
    </div>
